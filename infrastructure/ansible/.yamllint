---
# ============================================================================
# YAML Lint Configuration for Ansible
# ============================================================================

extends: default

rules:
  line-length:
    max: 170
    level: warning

  indentation:
    spaces: 2
    indent-sequences: yes

  comments:
    min-spaces-from-content: 1

  comments-indentation: disable

  truthy:
    allowed-values: ["true", "false", "yes", "no"]

  braces:
    max-spaces-inside: 1

  brackets:
    max-spaces-inside: 1

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  venv/
  collections/
  .molecule/
  *.retry
